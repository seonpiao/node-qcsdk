form
  margin: 0 0 10px 0

fieldset
  padding: 0
  margin: 0
  border: 0

// Form controls
textarea,
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"]
  display: inline-block
  border: 1px solid $inputBorder
  padding: 6px
  background: $inputBackground
  border-radius($inputBorderRadius)
  font-size: $baseFontSize + 2
  font-family: $baseFontFamily
  line-height: $baseLineHeight
  color: $gray
  width: 220px
  &:focus
    border-color: $themeColor
    outline: 0

input[disabled]
  background: $grayLighter
  color: $grayLight

input[type="text"].mini
  width: 80px

select
  border: 1px solid $inputBorder
  height: 34px
  line-height: 34px

input.ip
  width: 40px
  font-family: $monoFontFamily
  text-align: center

textarea
  width: auto
  &.large
    width: 660px
    height: 300px

.form
  .item
    margin: 12px 0
  label.inline
    display: inline-block
    padding: 9px 10px
  
.form-horizontal
  legend
    border-bottom: 1px solid $inputBorder
  .price-number,
  .price-unit
    line-height: $baseLineHeight * 2
  .control-label
    text-align: right
    float: left
    width: 130px
    font-size: $baseFontSize + 2
    line-height: 37px
    vertical-align: middle
  .controls
    margin-left: 140px
    min-height: 37px
    overflow: hidden
  .form-actions
    padding-left: 140px
  .help
    display: block
    color: $grayLight
    font-style: italic
    padding: 3px 0

.form-actions
  border-top: 1px solid $inputBorder
  padding: 10px 20px
  background: $grayLighter


